<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/app_toolbar"
        layout="@layout/app_toolbar" />

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/b0"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <android.sales.rajesh.com.sales.View.SFTextView
            android:id="@+id/merchant_detail_name_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Merchant Name"
            android:textSize="20sp"
            android:maxLines="3"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/c9"></android.sales.rajesh.com.sales.View.SFTextView>

        <LinearLayout
            android:id="@+id/LinearLayout11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/merchant_detail_balance_tag_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:text="Balance Amount:"
                android:textColor="@color/c2"
                android:textSize="17sp"
                android:textStyle="normal|bold">

            </TextView>

            <TextView
                android:id="@+id/merchant_detail_balance_value_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dip"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/c16"
                android:textSize="17sp"
                android:textStyle="normal|bold"></TextView>

        </LinearLayout>

        <android.sales.rajesh.com.sales.View.SFTextView
            android:id="@+id/merchant_detail_address_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/c9"
            android:textStyle="normal"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:text="Balance"> </android.sales.rajesh.com.sales.View.SFTextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@color/b0"
        android:orientation="vertical">

        <ListView
            android:id="@+id/merchant_detail_LV"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="4dip"
            android:background="@color/c0"
            android:layout_weight="1"
            android:cacheColorHint="#00000000"></ListView>


        <LinearLayout
            android:id="@+id/LinearLayout03"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/b0"
            android:orientation="horizontal">


            <Button
                android:id="@+id/md_visited_BT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="VISITED"
                android:textColor="@color/c0"
                android:background="@color/colorPrimary"
                android:textStyle="bold"
                android:paddingRight="5dip"
                android:paddingLeft="5dip"
                android:visibility="visible"
                android:layout_weight="1"
                android:layout_marginTop="10dip"></Button>
            <Button
                android:id="@+id/md_payment_hitory_BT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="PAYMENT HISTORY"
                android:textColor="@color/c0"
                android:background="@color/colorPrimary"
                android:textStyle="bold"
                android:paddingRight="5dip"
                android:paddingLeft="5dip"
                android:visibility="visible"
                android:layout_weight="1"
                android:layout_marginTop="10dip"></Button>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>