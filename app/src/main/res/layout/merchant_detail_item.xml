<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/b0">

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:layout_marginTop="4dip"
        android:background="@color/c0"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.sales.rajesh.com.sales.View.SFTextView
                android:id="@+id/md_item_total_balance_amt_date_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:textColor="@color/c2"
                android:textSize="17sp"
                android:layout_gravity="top"
                android:maxLines="1"
                android:text=""
                android:gravity="left|center_vertical"
                android:ellipsize="end"
                android:textStyle="bold">

            </android.sales.rajesh.com.sales.View.SFTextView>

            <android.sales.rajesh.com.sales.View.SFTextView
                android:id="@+id/md_item_total_balance_amt_TV"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:gravity="left|center_vertical"

                android:textColor="@color/c3"
                android:textStyle="bold"
                android:textAllCaps="false" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/LinearLayout22"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.sales.rajesh.com.sales.View.SFTextView
                android:id="@+id/md_item_type_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="17dp"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:textColor="@color/c2"
                android:textSize="20sp"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text=""
                android:ellipsize="end"
                android:textStyle="bold">

            </android.sales.rajesh.com.sales.View.SFTextView>

            <android.sales.rajesh.com.sales.View.SFTextView
                android:id="@+id/md_item_pending_TV"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:gravity="left|center_vertical"
                android:textColor="@color/c16"
                android:textStyle="bold"
                android:textAllCaps="false" />
        </RelativeLayout>
        <!--<ImageView-->
            <!--android:id="@+id/imageView1"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="4dp"-->
            <!--android:src="@drawable/divider" />-->
    </LinearLayout>
</RelativeLayout>